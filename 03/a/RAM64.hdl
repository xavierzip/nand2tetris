/**
 * Memory of 64 registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM64 {
    IN in[16], load, address[6];
    OUT out[16];

    PARTS:
    // Put your code here:
    DMux8Way(in=load, sel=address[3..5], a=addr0, b=addr1, c=addr2, d=addr3, e=addr4, f=addr5, g=addr6, h=addr7);
    RAM8(in=in, load=addr0, address=address[0..2], out=ram0);
    RAM8(in=in, load=addr1, address=address[0..2], out=ram1);
    RAM8(in=in, load=addr2, address=address[0..2], out=ram2);
    RAM8(in=in, load=addr3, address=address[0..2], out=ram3);
    RAM8(in=in, load=addr4, address=address[0..2], out=ram4);
    RAM8(in=in, load=addr5, address=address[0..2], out=ram5);
    RAM8(in=in, load=addr6, address=address[0..2], out=ram6);
    RAM8(in=in, load=addr7, address=address[0..2], out=ram7);
    Mux8Way16(a=ram0, b=ram1, c=ram2, d=ram3, e=ram4, f=ram5, g=ram6, h=ram7, sel=address[3..5], out=out);
}